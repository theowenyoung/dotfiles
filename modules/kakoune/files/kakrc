evaluate-commands %sh{
    config_files="
        commands.kak
        common.kak
        plugins.kak
        connect.kak
    "
    for file in $config_files; do
        printf "%s" "
            try %{
                source %{${kak_config:?}/$file}
            } catch %{
                echo -debug %val{error}
            }
        "
    done
    [ -f $kak_config/local.kak ] && echo "source $kak_config/local.kak"

}
try %{ source .kakrc.local }
